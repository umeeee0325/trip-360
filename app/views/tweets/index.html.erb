<div id="home" class="big-bg">
  <header class="page-header wrapper">
    <h1><%= link_to image_tag("logo.png", class: "logo", alt: "Trip360°"), root_path %></h1>
    <nav>
      <ul class="main-nav">
        <li><%= link_to '投稿する', new_tweet_path %></li> 
        <li><%= link_to 'マイページ', "#"%></li>
        <li><%= link_to 'ログアウト', "#"%></li>
      </ul>
    </nav>
  </header>

  <div class="home-content wrapper">
    <h2 class="page-title">Share your wonderful photos</h2>
    <P>素敵な写真を共有しましょう</P>
  </div>
</div>

<h3>最新投稿一覧</h3>

<div class="grid">
  <ul class='tweet-list'>
    <% @tweets.each do |tweet| %>
    <li class="tweet-item">
      <div class="tweet-name">
        <%# <%= link_to item_path(item.id) do %>
        <p class='tweet-user'>ユーザー名
                          <%# <%= tweet.name %>
        </p>
      </div>
      <div class="tweet-image">
        <%= image_tag tweet.image.variant(resize: '600x300') if tweet.image.attached? %>
      </div>
      <div class="tweet-title">
        <p><%= tweet.title %></p>
      </div>
    </li>
    <% end %>
  </ul>
<div>
<footer>
</footer>